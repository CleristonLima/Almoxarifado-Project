@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Erro"]
    </div>
}

<style>
    .center-screen {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh;
    }

    .form-container {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
    }
</style>
<div class="center-screen">
    <div class="form-container">
        <form method="post" action="Login/MenuPrincipal">
            <div class="form-group">
                <label for="userId"><strong>Usuário</strong></label>
                <input type="text" class="form-control" name="LoginName" id="User" />
            </div>
            <div class="form-group">
                <label for="userSenha"><strong>Senha</strong></label>
                <input type="password" class="form-control" name="PasswordLogin" id="Senha" />
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
</div>